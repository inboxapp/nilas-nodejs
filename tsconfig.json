{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "typedocOptions": {
      "entryPoints": ["src/nylas.ts"],
      "out": "docs",
      "plugin": ["typedoc-plugin-missing-exports", "typedoc-plugin-rename-defaults"],
      "excludeExternals": true,
      "excludePrivate": true,
  },
  "exclude": ["tests", "lib"]
}
